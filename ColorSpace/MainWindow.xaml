<Window x:Class="ColorSpace.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorSpace"
        mc:Ignorable="d"
        Title="Color Pixel Sort" Height="700" Width="700">
    <Grid>
        <Button Content="Random Color" HorizontalAlignment="Left" Name="FillRandomColorButton" Margin="120,35,0,0" VerticalAlignment="Top" Click="FillRandomColorButton_Click" Width="168" Background="White"/>
        <Button Content="Color Sorting" Name="SortColorButton" HorizontalAlignment="Left" Margin="395,35,0,0" VerticalAlignment="Top" Click="SortColorButton_Click" Width="178" Background="White"/>
        <Border BorderThickness="1"  BorderBrush="#FF6546FF" Background="LightGray"  Width="500" Height="500">
            <Image Width="500" Height="500" x:Name="image"/>
        </Border>        
    </Grid>
</Window>
